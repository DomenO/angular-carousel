{
    "extends": "../tslint.json",
    "rules": {
        "no-bitwise": false,
        "radix": false,
        "curly": [
            true, 
            "as-needed"
        ],
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ]
    }
}
